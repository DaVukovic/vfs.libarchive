<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.libarchive"
  version="1.0.5"
  name="Archive support"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.vfs"
    protocols="archive|rar"
    extensions=".7z|.tar.gz|.tar.bz2|.tar.xz|.zip|.rar|.tgz|.tbz2|.gz|.bz2|.xz|.cbr"
    files="true"
    directories="true"
    filedirectories="true"
    encodedhostname="true"
    library_@PLATFORM@="@LIBRARY_FILENAME@" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Archive support</summary>
    <description lang="en">Archive support</description>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/vfs.libarchive</source>
  </extension>
</addon>
